
@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,700');

body{
    background white
    margin 0
    padding 0
    font-family: 'Montserrat', sans-serif;
}
.had-coontainer, .row 
    height: 100vh
.row{
    display flex
    align-items: center
}
.app{
    height 100vh
    border: 3vmin solid #0a77f5;
}

.image
    display: flex;
    align-items: center;
    flex-direction: column;

.img
    width: 200px;
    height: 200px;
    background: grey;
    border-radius: 50%;
    background url('../images/photo.jpg')
    background-size: cover;
    background-position: center;

.social ul 
    display flex
    flex-wrap wrap
.social ul li
    margin 0 30px

.social ul li a img 
        width: 3.5vmin;
        height: 3.5vmin;

.text 
    h2, h3
        font-size 4vmin
    
    h3
        font-weight 100
    
        span 
            color #0a77f5

    h4
        font-weight 900
        font-size 2.5vmin

    a
        cursor pointer
    
    p
        span
            color: #fff;
            background: #0a77f5;
            padding: 5px 20px;
            margin-left: 10px;
            border-radius: 20px;
            position relative
            overflow hidden
            transition all .3s linear

